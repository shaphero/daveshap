<style>
  /* Hero specific styles */
  .hero-section {
    position: relative;
    width: 100%;
    background: var(--gradient-hero);
    overflow-x: hidden;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }
  
  /* Custom gradients for floating orbs */
  .from-primary\/20 { --tw-gradient-from: rgba(29, 78, 137, 0.2); }
  .to-accent\/20 { --tw-gradient-to: rgba(108, 179, 245, 0.2); }
  .from-accent\/15 { --tw-gradient-from: rgba(108, 179, 245, 0.15); }
  .to-primary-glow\/15 { --tw-gradient-to: rgba(91, 141, 217, 0.15); }
  .from-primary-glow\/5 { --tw-gradient-from: rgba(91, 141, 217, 0.05); }
  .from-primary\/10 { --tw-gradient-from: rgba(29, 78, 137, 0.1); }
  .from-accent\/20 { --tw-gradient-from: rgba(108, 179, 245, 0.2); }
  .to-primary-glow\/20 { --tw-gradient-to: rgba(91, 141, 217, 0.2); }
  
  .bg-gradient-to-r {
    background-image: linear-gradient(to right, var(--tw-gradient-from), var(--tw-gradient-to));
  }
  
  .bg-gradient-to-br {
    background-image: linear-gradient(to bottom right, var(--tw-gradient-from), var(--tw-gradient-to));
  }
  
  /* Positioning classes */
  .left-\[5\%\] { left: 5%; }
  .right-\[5\%\] { right: 5%; }
  .w-48 { width: 12rem; }
  .h-48 { height: 12rem; }
  .w-40 { width: 10rem; }
  .h-40 { height: 10rem; }
  .w-\[600px\] { width: 600px; }
  .h-\[600px\] { height: 600px; }
  .min-w-\[280px\] { min-width: 280px; }
  
  /* Transform utilities */
  .transform { transform: translateZ(0); }
  .-translate-x-1\/2 { transform: translateX(-50%); }
  .-translate-y-1\/2 { transform: translateY(-50%); }
  .top-1\/2 { top: 50%; }
  .left-1\/2 { left: 50%; }
  .-translate-x-1\/2.-translate-y-1\/2 { 
    transform: translate(-50%, -50%); 
  }
  
  /* Blur utilities */
  .blur-2xl { filter: blur(40px); }
  .blur-3xl { filter: blur(64px); }
  .blur-lg { filter: blur(16px); }
  
  /* Background utilities */
  .bg-\[length\:200\%_200\%\] { background-size: 200% 200%; }
  
  /* Text gradient */
  .bg-clip-text {
    -webkit-background-clip: text;
    background-clip: text;
  }
  .text-transparent {
    color: transparent;
  }
  
  /* Opacity utilities */
  .opacity-20 { opacity: 0.2; }
  .opacity-30 { opacity: 0.3; }
  .opacity-40 { opacity: 0.4; }
  .text-white\/90 { color: rgba(255, 255, 255, 0.9); }
  .text-white\/80 { color: rgba(255, 255, 255, 0.8); }
  
  /* Shadow utilities */
  .shadow-glow { box-shadow: var(--shadow-glow); }
  .drop-shadow-2xl { filter: drop-shadow(0 25px 25px rgba(0, 0, 0, 0.15)); }
  
  /* Animation utilities */
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: .5; }
  }
  
  /* Group hover */
  .group:hover .group-hover\:translate-x-2 {
    transform: translateX(0.5rem);
  }
  
  /* Leading utilities */
  .leading-none { line-height: 1; }
  .leading-relaxed { line-height: 1.625; }
  
  /* Tracking utilities */
  .tracking-tight { letter-spacing: -0.025em; }
  
  /* Inset utilities */
  .-inset-1 { inset: -0.25rem; }
  
  /* Responsive utilities */
  @media (min-width: 768px) {
    .md\:w-96 { width: 24rem; }
    .md\:h-96 { height: 24rem; }
    .md\:w-80 { width: 20rem; }
    .md\:h-80 { height: 20rem; }
    .md\:left-10 { left: 2.5rem; }
    .md\:right-20 { right: 5rem; }
    .md\:w-\[1000px\] { width: 1000px; }
    .md\:h-\[1000px\] { height: 1000px; }
    .md\:block { display: block; }
    .md\:opacity-40 { opacity: 0.4; }
    .md\:blur-3xl { filter: blur(64px); }
    .md\:text-2xl { font-size: 1.5rem; }
    .md\:text-7xl { font-size: 4.5rem; }
  }
  
  @media (min-width: 1024px) {
    .lg\:text-3xl { font-size: 1.875rem; }
    .lg\:text-8xl { font-size: 6rem; }
  }
  
  @media (min-width: 1280px) {
    .xl\:text-9xl { font-size: 8rem; }
  }
  
  /* Font utilities */
  .font-black { font-weight: 900; }
  
  /* Width utilities */
  .w-2 { width: 0.5rem; }
  .h-2 { height: 0.5rem; }
</style>