---
import OptimizedImage from './OptimizedImage.astro';

const clients = [
  { name: "Toyota", logo: null, colors: "text-primary font-black" },
  { name: "SoFi", logo: "/optimized/sofi-logo.svg", colors: "text-primary font-bold" },
  { name: "T-Mobile", logo: null, colors: "text-primary font-black" },
  { name: "Holiday Inn", logo: null, colors: "text-accent font-bold" },
  { name: "Office Depot", logo: null, colors: "text-primary font-bold" },
  { name: "Bank of America", logo: null, colors: "text-accent font-bold" },
  { name: "Microsoft", logo: "/optimized/microsoft-logo.png", colors: "text-primary font-bold" },
  { name: "Western Union", logo: null, colors: "text-accent font-black" }
];
---

<section class="premium-section bg-background relative">
  <div class="premium-container text-center">
    
    <!-- Animated Badge -->
    <div class="mb-12 animate-fade-in">
      <span class="inline-flex items-center gap-2 px-6 py-3 glass-card text-accent font-semibold text-sm border border-accent/20 shadow-glow">
        <span class="w-2 h-2 bg-accent rounded-full animate-pulse"></span>
        üèÜ Proven Track Record
      </span>
    </div>
    
    <!-- Main Headline -->
    <h3 class="text-4xl md:text-5xl lg:text-6xl font-black text-foreground mb-8 leading-tight animate-fade-in-up">
      The same SEO process we used to drive success for 
      <span class="relative inline-block mt-4">
        <span class="bg-gradient-to-r from-primary to-primary-glow bg-clip-text text-transparent">the world's biggest brands</span>
        <div class="absolute -inset-1 bg-gradient-to-r from-primary/10 to-primary-glow/10 opacity-10 blur-xl rounded-lg"></div>
      </span>
    </h3>
    
    <!-- Subheadline -->
    <p class="text-xl text-muted-foreground mb-16 max-w-4xl mx-auto animate-fade-in" style="animation-delay: 0.2s">
      David Shapiro has led SEO strategy for Fortune 500 companies, delivering measurable results at scale.
    </p>
    
    <!-- Client Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-20 animate-fade-in" style="animation-delay: 0.4s">
      {clients.map((client, index) => (
        <div 
          key={index}
          class="group relative glass-card h-24 flex items-center justify-center border border-white/10 hover:border-accent/30 transition-all duration-500 hover:scale-105 magnetic"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Glow effect on hover -->
          <div class="absolute inset-0 bg-gradient-to-r from-primary/0 to-accent/0 group-hover:from-primary/5 group-hover:to-accent/5 rounded-2xl transition-all duration-500"></div>
          
          {client.logo ? (
            <img 
              src={client.logo}
              alt={`${client.name} logo`}
              class="max-h-10 max-w-full object-contain group-hover:scale-110 transition-transform duration-300 relative z-10"
              width="120"
              height="40"
            />
          ) : (
            <span class={`text-lg ${client.colors} group-hover:scale-110 transition-transform duration-300 relative z-10`}>
              {client.name}
            </span>
          )}
        </div>
      ))}
    </div>
    
    <!-- CTA Button -->
    <div class="animate-fade-in" style="animation-delay: 0.6s">
      <a 
        href="/seo-success"
        class="btn-accent btn-lg group h-14 px-8 text-lg font-bold bg-accent hover:bg-accent/90 hover:scale-105 transition-all duration-300 shadow-elegant hover:shadow-glow premium-glow magnetic text-white inline-flex items-center"
      >
        <span class="mr-3 text-xl">üìà</span>
        See Our Proven Results
        <span class="ml-3 group-hover:translate-x-2 transition-transform text-xl">‚Üí</span>
      </a>
    </div>
  </div>
  
  <!-- Background Elements -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-20 right-20 w-64 h-64 bg-gradient-to-r from-accent/10 to-primary/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 left-20 w-48 h-48 bg-gradient-to-r from-primary-glow/10 to-transparent rounded-full blur-3xl animate-float" style="animation-delay: 3s"></div>
  </div>
</section>

<style>
  .logos-section {
    background: linear-gradient(135deg, var(--cream) 0%, #fdf8f0 100%);
    position: relative;
    overflow: hidden;
  }
  
  .logos-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(29, 78, 137, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }
  
  .section-header h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--blue);
    margin-bottom: var(--space-sm);
  }
  
  .section-header p {
    color: var(--gray);
    font-size: 1.125rem;
  }
  
  .logos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-3xl);
  }
  
  .logo-card {
    background: var(--white);
    border-radius: 12px;
    padding: var(--space-xl);
    text-align: center;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }
  
  .logo-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .client-logo {
    height: 50px;
    width: auto;
    object-fit: contain;
    filter: grayscale(100%) opacity(0.7);
    transition: all 0.3s ease;
  }
  
  .logo-card:hover .client-logo {
    filter: grayscale(0%) opacity(1);
  }
  
  .client-text {
    font-size: 2rem;
    font-weight: 700;
    color: var(--blue);
    opacity: 0.7;
    transition: all 0.3s ease;
  }
  
  .logo-card:hover .client-text {
    opacity: 1;
  }
  
  .achievement {
    font-size: 0.875rem;
    color: var(--gray);
    margin: 0;
  }
  
  .cta-container {
    text-align: center;
  }
  
  .btn .arrow {
    transition: transform 0.2s ease;
  }
  
  .btn:hover .arrow {
    transform: translateX(4px);
  }
</style>