---
import OptimizedImage from './OptimizedImage.astro';

const clients = [
  { 
    name: "SoFi", 
    logo: "/assets/sofi-logo.svg",
    achievement: "509% traffic growth"
  },
  { 
    name: "Adobe", 
    logo: null,
    text: "Adobe",
    achievement: "25K+ downloads generated"
  },
  { 
    name: "Microsoft", 
    logo: "/assets/microsoft-logo.png",
    achievement: "73% increase in qualified leads"
  },
  { 
    name: "AT&T", 
    logo: null,
    text: "AT&T",
    achievement: "Market dominance in key verticals"
  }
];
---

<section class="section py-32 bg-gradient-section relative overflow-hidden">
  <div class="container relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in">
        Trusted by <span class="text-accent">Industry Leaders</span>
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto animate-fade-in" style="animation-delay: 0.1s">
        Delivering measurable SEO results for the world's most demanding brands
      </p>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {clients.map((client, index) => (
        <div class="animate-fade-in" style={`animation-delay: ${(index + 2) * 0.1}s`}>
          <div class="bg-white rounded-2xl p-8 h-full shadow-lg hover:shadow-xl transition-all duration-300 flex flex-col items-center justify-center gap-4 group hover:scale-105">
            {client.logo ? (
              <img 
                src={client.logo} 
                alt={`${client.name} logo`}
                class="h-12 md:h-16 w-auto object-contain filter grayscale opacity-70 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300"
                loading="lazy"
                width="120"
                height="60"
              />
            ) : (
              <span class="text-3xl md:text-4xl font-bold text-primary opacity-70 group-hover:opacity-100 transition-opacity duration-300">{client.text}</span>
            )}
            <p class="text-sm text-muted-foreground text-center">{client.achievement}</p>
          </div>
        </div>
      ))}
    </div>
    
    <div class="grid md:grid-cols-3 gap-8 mt-16">
      <div class="text-center animate-fade-in" style="animation-delay: 0.6s">
        <div class="text-5xl font-bold text-primary mb-2">350+</div>
        <p class="text-muted-foreground">Successful Projects</p>
      </div>
      <div class="text-center animate-fade-in" style="animation-delay: 0.7s">
        <div class="text-5xl font-bold text-primary mb-2">$2.3B+</div>
        <p class="text-muted-foreground">Revenue Generated</p>
      </div>
      <div class="text-center animate-fade-in" style="animation-delay: 0.8s">
        <div class="text-5xl font-bold text-primary mb-2">16+</div>
        <p class="text-muted-foreground">Years of Excellence</p>
      </div>
    </div>
    
    <div class="text-center mt-12 animate-fade-in" style="animation-delay: 0.9s">
      <a href="#contact" class="btn btn-primary btn-xl premium-glow">
        Join These Success Stories
        <span class="ml-2">â†’</span>
      </a>
    </div>
  </div>
  
  <!-- Background Pattern -->
  <div class="absolute inset-0 grid-pattern opacity-5"></div>
</section>

<style>
  .logos-section {
    background: linear-gradient(135deg, var(--cream) 0%, #fdf8f0 100%);
    position: relative;
    overflow: hidden;
  }
  
  .logos-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(29, 78, 137, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }
  
  .section-header h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--blue);
    margin-bottom: var(--space-sm);
  }
  
  .section-header p {
    color: var(--gray);
    font-size: 1.125rem;
  }
  
  .logos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-3xl);
  }
  
  .logo-card {
    background: var(--white);
    border-radius: 12px;
    padding: var(--space-xl);
    text-align: center;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }
  
  .logo-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .client-logo {
    height: 50px;
    width: auto;
    object-fit: contain;
    filter: grayscale(100%) opacity(0.7);
    transition: all 0.3s ease;
  }
  
  .logo-card:hover .client-logo {
    filter: grayscale(0%) opacity(1);
  }
  
  .client-text {
    font-size: 2rem;
    font-weight: 700;
    color: var(--blue);
    opacity: 0.7;
    transition: all 0.3s ease;
  }
  
  .logo-card:hover .client-text {
    opacity: 1;
  }
  
  .achievement {
    font-size: 0.875rem;
    color: var(--gray);
    margin: 0;
  }
  
  .cta-container {
    text-align: center;
  }
  
  .btn .arrow {
    transition: transform 0.2s ease;
  }
  
  .btn:hover .arrow {
    transform: translateX(4px);
  }
</style>