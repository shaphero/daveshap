---
const navItems = [
  { href: '/ai-training', label: 'AI Training' },
  { href: '/seo', label: 'SEO' },
  { href: '/marketing-strategy', label: 'Strategy' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 w-full py-4 px-6 bg-background/95 backdrop-blur-md border-b border-border z-50">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    <!-- Logo - Now Clickable -->
    <a href="/" class="flex items-center group">
      <div class="w-14 h-14 bg-gradient-to-br from-primary to-primary-darker rounded-xl flex items-center justify-center shadow-premium group-hover:shadow-glow transition-all duration-300 group-hover:scale-105">
        <span class="text-white font-black text-xl">DS</span>
      </div>
    </a>
    
    <!-- Center Navigation -->
    <nav class="hidden md:flex items-center gap-8 absolute left-1/2 -translate-x-1/2">
      {navItems.map((item) => (
        <a 
          href={item.href}
          class={`text-sm font-medium transition-all duration-300 hover:text-primary ${
            currentPath === item.href 
              ? 'text-primary' 
              : 'text-muted-foreground'
          } relative group`}
        >
          {item.label}
          <span class={`absolute -bottom-1 left-0 h-0.5 bg-primary transition-all duration-300 ${
            currentPath === item.href 
              ? 'w-full' 
              : 'w-0 group-hover:w-full'
          }`}></span>
        </a>
      ))}
    </nav>
    
    <!-- CTA Button -->
    <div class="flex items-center gap-4">
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden w-10 h-10 flex items-center justify-center rounded-lg hover:bg-muted/50 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      
      <a href="mailto:dave@daveshap.com?subject=Ready%20to%20get%20started" 
         class="btn-default btn-lg group text-white inline-flex items-center">
        <span class="mr-2">✉️</span>
        <span class="hidden sm:inline">GET STARTED</span>
        <span class="sm:hidden">START</span>
        <span class="ml-2 group-hover:translate-x-1 transition-transform">→</span>
      </a>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="md:hidden absolute top-full left-0 right-0 bg-background/95 backdrop-blur-md border-b border-border opacity-0 invisible transition-all duration-300">
    <nav class="max-w-7xl mx-auto px-6 py-4 space-y-2">
      {navItems.map((item) => (
        <a 
          href={item.href}
          class={`block py-2 text-sm font-medium transition-all duration-300 hover:text-primary ${
            currentPath === item.href 
              ? 'text-primary' 
              : 'text-muted-foreground'
          }`}
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<style>
  #mobile-menu.active {
    @apply opacity-100 visible;
  }
</style>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('active');
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!mobileMenuBtn.contains(e.target) && !mobileMenu.contains(e.target)) {
        mobileMenu.classList.remove('active');
      }
    });
  }
</script>