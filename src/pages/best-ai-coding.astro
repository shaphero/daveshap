---
import PageLayout from '../layouts/PageLayout.astro';
import Section from '../components/common/Section.astro';
import Icon from '../components/Icon.astro';

const title = "Best AI Models for Coding in 2025: Data-Driven Analysis";
const description = "Comprehensive analysis of the best AI coding models in 2025. Compare Claude, GPT-4, DeepSeek, and Gemini with real benchmarks, pricing, and developer insights.";

const humanEvalData = [
  { model: 'Claude 3.7', score: 92 },
  { model: 'GPT-4o', score: 90.2 },
  { model: 'DeepSeek V3', score: 90 },
  { model: 'Gemini 2.5', score: 85 },
  { model: 'Command R+', score: 88 },
];

const sweBenchData = [
  { model: 'Claude Opus 4', score: 72.5, parallel: 79.4 },
  { model: 'Claude 3.7', score: 70.3, parallel: 77.2 },
  { model: 'Gemini 2.5', score: 63.8, parallel: 68.5 },
  { model: 'GPT-4.1', score: 54.6, parallel: 59.2 },
  { model: 'DeepSeek R1', score: 49, parallel: 52.3 },
];

const contextWindowData = [
  { model: 'Claude', tokens: 200000 },
  { model: 'GPT-4o', tokens: 128000 },
  { model: 'Gemini 2.5', tokens: 128000 },
  { model: 'DeepSeek', tokens: 16000 },
];

const pricingData = [
  { model: 'DeepSeek R1', inputPrice: 0.14, outputPrice: 4.4, value: 'Excellent' },
  { model: 'Claude 3.7', inputPrice: 3, outputPrice: 15, value: 'Good' },
  { model: 'GPT-4o', inputPrice: 5, outputPrice: 15, value: 'Good' },
  { model: 'OpenAI o1', inputPrice: 15, outputPrice: 60, value: 'Premium' },
];

const toolAdoption = [
  { tool: 'GitHub Copilot', model: 'Claude Sonnet 4', percentage: 92 },
  { tool: 'Cursor IDE', model: 'Claude 3.5 Sonnet', percentage: 85 },
  { tool: 'Aider', model: 'Claude 3.5 Sonnet', percentage: 78 },
  { tool: 'Windsurf', model: 'Multiple', percentage: 65 },
];
---

<PageLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-blue-900/20 to-gray-900 text-white">
    <div class="absolute inset-0">
      <div class="absolute top-20 left-10 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-40 right-20 w-80 h-80 bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>
    
    <div class="relative z-10 container mx-auto px-4 py-24">
      <div class="max-w-5xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-white/10 backdrop-blur-lg border border-white/20 text-white font-semibold text-sm mb-8">
          <span class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></span>
          üöÄ 2025 AI Coding Model Analysis
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-black mb-6 leading-tight">
          The <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">Real Data</span> on
          <br />
          AI Coding Models in 2025
        </h1>
        
        <p class="text-xl md:text-2xl text-white/80 leading-relaxed max-w-3xl mx-auto mb-8">
          Stop guessing which AI model to use for coding. Here's what the benchmarks, 
          developers, and real-world results actually show.
        </p>

        <div class="flex flex-wrap justify-center gap-6 text-sm text-white/80">
          <div class="flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur">
            <span class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></span>
            üìä Real benchmark data
          </div>
          <div class="flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur">
            <span class="w-2 h-2 bg-purple-400 rounded-full animate-pulse"></span>
            üí¨ Developer insights
          </div>
          <div class="flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur">
            <span class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></span>
            üí∞ Pricing comparison
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Winner Section -->
  <Section>
    <div class="p-8 bg-gradient-to-r from-blue-50 to-purple-50 rounded-2xl border-2 border-blue-200">
      <h2 class="text-3xl font-bold mb-4">
        üèÜ The Quick Answer: Claude 3.7 Sonnet Dominates
      </h2>
      <p class="text-lg text-gray-600 mb-6">
        If you're looking for the single best AI model for coding in 2025, <strong class="text-blue-600">Claude 3.7 Sonnet</strong> is 
        the clear winner. It scores 92% on HumanEval and achieved a record-breaking 70.3% on SWE-bench 
        (real-world software engineering tasks).
      </p>
      <div class="grid md:grid-cols-3 gap-4">
        <div class="bg-white p-4 rounded-lg border border-gray-200">
          <div class="text-3xl font-bold text-blue-600 mb-2">92%</div>
          <div class="text-sm text-gray-600">HumanEval Score</div>
        </div>
        <div class="bg-white p-4 rounded-lg border border-gray-200">
          <div class="text-3xl font-bold text-blue-600 mb-2">70.3%</div>
          <div class="text-sm text-gray-600">SWE-bench Score</div>
        </div>
        <div class="bg-white p-4 rounded-lg border border-gray-200">
          <div class="text-3xl font-bold text-blue-600 mb-2">200K</div>
          <div class="text-sm text-gray-600">Token Context</div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Benchmark Comparison -->
  <Section title="üìä Head-to-Head Benchmark Comparison">
    <div class="space-y-8">
      <!-- HumanEval Scores -->
      <div class="bg-white p-6 rounded-lg border border-gray-200">
        <h3 class="text-xl font-semibold mb-4">HumanEval Pass@1 Scores</h3>
        <p class="text-gray-600 mb-6">
          HumanEval measures functional correctness for synthesizing programs from docstrings. 
          Higher scores indicate better code generation accuracy.
        </p>
        <div class="space-y-3">
          {humanEvalData.map(item => (
            <div class="flex items-center gap-4">
              <div class="w-32 text-sm font-medium">{item.model}</div>
              <div class="flex-1 bg-gray-200 rounded-full h-8 relative overflow-hidden">
                <div 
                  class="absolute left-0 top-0 h-full bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-end pr-3"
                  style={`width: ${item.score}%`}
                >
                  <span class="text-white text-sm font-semibold">{item.score}%</span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- SWE-bench Results -->
      <div class="bg-white p-6 rounded-lg border border-gray-200">
        <h3 class="text-xl font-semibold mb-4">SWE-bench Performance</h3>
        <p class="text-gray-600 mb-6">
          SWE-bench evaluates real-world software engineering capabilities. These scores represent 
          the percentage of GitHub issues correctly resolved.
        </p>
        <div class="space-y-4">
          {sweBenchData.map(item => (
            <div class="space-y-2">
              <div class="flex items-center justify-between">
                <span class="font-medium">{item.model}</span>
                <div class="flex gap-4 text-sm">
                  <span class="text-gray-600">Standard: {item.score}%</span>
                  <span class="text-blue-600 font-semibold">Parallel: {item.parallel}%</span>
                </div>
              </div>
              <div class="flex gap-2">
                <div class="flex-1 bg-gray-200 rounded h-4 relative overflow-hidden">
                  <div 
                    class="absolute left-0 top-0 h-full bg-blue-400 rounded"
                    style={`width: ${item.score}%`}
                  ></div>
                </div>
                <div class="flex-1 bg-gray-200 rounded h-4 relative overflow-hidden">
                  <div 
                    class="absolute left-0 top-0 h-full bg-purple-400 rounded"
                    style={`width: ${item.parallel}%`}
                  ></div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </Section>

  <!-- Developer Sentiment -->
  <Section title="üí¨ What Developers Are Actually Saying">
    <div class="grid lg:grid-cols-2 gap-8 mb-8">
      <div class="p-6 bg-white rounded-lg border-l-4 border-blue-500">
        <div class="flex items-start gap-3 mb-4">
          <span class="text-2xl">üí≠</span>
          <div>
            <h3 class="font-semibold text-lg mb-2">Reddit Developer on Claude</h3>
            <p class="text-gray-600 italic">
              "I switched to Claude yesterday and it helped me make an entire phone app. 
              Incredibly more powerful and truly feels like it listens to what you say. 
              It produced code of 1000 lines which took 4 continues, and each continue 
              was perfectly where it last left off."
            </p>
          </div>
        </div>
      </div>
      
      <div class="p-6 bg-white rounded-lg border-l-4 border-purple-500">
        <div class="flex items-start gap-3 mb-4">
          <span class="text-2xl">üìà</span>
          <div>
            <h3 class="font-semibold text-lg mb-2">Software Agency Results</h3>
            <p class="text-gray-600 italic">
              "Switching to Claude reduced code review time by 60%. Instead of senior 
              developers spending hours checking junior code, Claude provides initial 
              reviews that catch 90% of issues."
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="p-6 bg-gray-50 rounded-lg">
      <h3 class="text-xl font-semibold mb-4">Community Consensus</h3>
      <div class="space-y-4">
        <div class="flex items-center gap-4">
          <div class="w-24 text-sm font-medium">Claude</div>
          <div class="flex-1 bg-gray-200 rounded-full h-6 relative overflow-hidden">
            <div class="absolute left-0 top-0 h-full bg-blue-500 rounded-full" style="width: 85%"></div>
          </div>
          <span class="text-sm text-gray-600">85% prefer for complex coding</span>
        </div>
        <div class="flex items-center gap-4">
          <div class="w-24 text-sm font-medium">GPT-4</div>
          <div class="flex-1 bg-gray-200 rounded-full h-6 relative overflow-hidden">
            <div class="absolute left-0 top-0 h-full bg-purple-500 rounded-full" style="width: 65%"></div>
          </div>
          <span class="text-sm text-gray-600">65% use for general tasks</span>
        </div>
        <div class="flex items-center gap-4">
          <div class="w-24 text-sm font-medium">DeepSeek</div>
          <div class="flex-1 bg-gray-200 rounded-full h-6 relative overflow-hidden">
            <div class="absolute left-0 top-0 h-full bg-green-500 rounded-full" style="width: 45%"></div>
          </div>
          <span class="text-sm text-gray-600">45% prefer for budget projects</span>
        </div>
      </div>
    </div>
  </Section>

  <!-- Context Window Comparison -->
  <Section title="üìè Context Window Sizes Matter">
    <p class="text-lg text-gray-600 mb-6">
      Larger context windows mean the AI can understand more of your codebase at once. 
      This is crucial for complex projects and debugging.
    </p>
    
    <div class="grid md:grid-cols-4 gap-4">
      {contextWindowData.map(item => (
        <div class="p-6 bg-white rounded-lg border border-gray-200 text-center">
          <h3 class="font-semibold text-lg mb-2">{item.model}</h3>
          <div class="text-3xl font-bold text-blue-600 mb-2">
            {(item.tokens / 1000).toFixed(0)}K
          </div>
          <div class="text-sm text-gray-600">tokens</div>
          <div class="mt-4">
            <div class="bg-gray-200 rounded-full h-2 relative overflow-hidden">
              <div 
                class="absolute left-0 top-0 h-full bg-blue-500 rounded-full"
                style={`width: ${(item.tokens / 200000) * 100}%`}
              ></div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </Section>

  <!-- Pricing Comparison -->
  <Section title="üí∞ Pricing Reality Check">
    <p class="text-gray-600 mb-6">
      Cost per million tokens varies dramatically. DeepSeek offers the best value, 
      while OpenAI o1 is premium-priced.
    </p>
    
    <div class="overflow-x-auto">
      <table class="w-full bg-white rounded-lg overflow-hidden">
        <thead>
          <tr class="bg-gray-100 border-b">
            <th class="text-left py-3 px-4">Model</th>
            <th class="text-right py-3 px-4">Input (per 1M tokens)</th>
            <th class="text-right py-3 px-4">Output (per 1M tokens)</th>
            <th class="text-right py-3 px-4">Value Rating</th>
          </tr>
        </thead>
        <tbody>
          {pricingData.map(item => (
            <tr class="border-b">
              <td class="py-3 px-4 font-medium">{item.model}</td>
              <td class="text-right py-3 px-4">${item.inputPrice}</td>
              <td class="text-right py-3 px-4">${item.outputPrice}</td>
              <td class="text-right py-3 px-4">
                <span class={`inline-block px-3 py-1 rounded-full text-xs font-semibold text-white ${
                  item.value === 'Excellent' ? 'bg-green-500' :
                  item.value === 'Good' ? 'bg-yellow-500' : 'bg-red-500'
                }`}>
                  {item.value}
                </span>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </Section>

  <!-- Tool Integration -->
  <Section title="üõ†Ô∏è Industry Tool Adoption">
    <p class="text-lg text-gray-600 mb-6">
      Major development tools have chosen their preferred AI models. This shows real-world confidence.
    </p>
    
    <div class="grid md:grid-cols-2 gap-6">
      {toolAdoption.map(tool => (
        <div class="p-6 bg-white rounded-lg border border-gray-200">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="font-semibold text-lg">{tool.tool}</h3>
              <p class="text-sm text-gray-600">Default: {tool.model}</p>
            </div>
            <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm">
              {tool.percentage}% adoption
            </span>
          </div>
          <div class="bg-gray-200 rounded-full h-2 relative overflow-hidden">
            <div 
              class="absolute left-0 top-0 h-full bg-blue-500 rounded-full"
              style={`width: ${tool.percentage}%`}
            ></div>
          </div>
        </div>
      ))}
    </div>
  </Section>

  <!-- Detailed Model Breakdown -->
  <Section title="üìã Complete Model Breakdown">
    <div class="space-y-8">
      <!-- Claude -->
      <div class="p-8 bg-white rounded-lg border-2 border-blue-200">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
            <span class="text-2xl">ü•á</span>
          </div>
          <div class="flex-1">
            <h3 class="text-2xl font-bold mb-2">Claude 3.7 Sonnet & Opus 4</h3>
            <p class="text-gray-600">The current champion of coding AI</p>
          </div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h4 class="font-semibold mb-3 text-green-600">‚úÖ Strengths</h4>
            <ul class="space-y-2 text-sm">
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">‚Ä¢</span>
                <span>92% HumanEval, 70.3% SWE-bench (industry-leading)</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">‚Ä¢</span>
                <span>200K token context window (handles entire codebases)</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">‚Ä¢</span>
                <span>Extended thinking for complex multi-step problems</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">‚Ä¢</span>
                <span>Default in GitHub Copilot, Cursor, and Aider</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">‚Ä¢</span>
                <span>Lowest hallucination rate among top models</span>
              </li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-3 text-red-600">‚ùå Limitations</h4>
            <ul class="space-y-2 text-sm">
              <li class="flex items-start gap-2">
                <span class="text-red-600 mt-1">‚Ä¢</span>
                <span>$15/million output tokens (mid-range pricing)</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-red-600 mt-1">‚Ä¢</span>
                <span>Can be slightly slower than GPT-4o</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-red-600 mt-1">‚Ä¢</span>
                <span>Limited availability in some regions</span>
              </li>
            </ul>
          </div>
        </div>
        
        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
          <p class="text-sm">
            <strong>Best for:</strong> Professional development, complex debugging, large codebases, 
            production-ready code, teams that need reliability over speed.
          </p>
        </div>
      </div>

      <!-- GPT-4o -->
      <div class="p-8 bg-white rounded-lg border border-gray-200">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
            <span class="text-2xl">ü•à</span>
          </div>
          <div class="flex-1">
            <h3 class="text-2xl font-bold mb-2">GPT-4o & o-series</h3>
            <p class="text-gray-600">The speed champion with solid accuracy</p>
          </div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h4 class="font-semibold mb-3 text-green-600">‚úÖ Strengths</h4>
            <ul class="space-y-2 text-sm">
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">‚Ä¢</span>
                <span>90.2% HumanEval (excellent accuracy)</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">‚Ä¢</span>
                <span>Fastest response times among top models</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">‚Ä¢</span>
                <span>128K token context window</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">‚Ä¢</span>
                <span>Excellent for real-time autocomplete</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">‚Ä¢</span>
                <span>Wide ecosystem integration</span>
              </li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-3 text-red-600">‚ùå Limitations</h4>
            <ul class="space-y-2 text-sm">
              <li class="flex items-start gap-2">
                <span class="text-red-600 mt-1">‚Ä¢</span>
                <span>49% SWE-bench (weaker on real-world tasks)</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-red-600 mt-1">‚Ä¢</span>
                <span>o1 model: $60/million output tokens (expensive)</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-red-600 mt-1">‚Ä¢</span>
                <span>More generic responses compared to Claude</span>
              </li>
            </ul>
          </div>
        </div>
        
        <div class="mt-6 p-4 bg-purple-50 rounded-lg">
          <p class="text-sm">
            <strong>Best for:</strong> Quick iterations, autocomplete features, teams already in OpenAI ecosystem, 
            projects requiring fast response times.
          </p>
        </div>
      </div>

      <!-- DeepSeek -->
      <div class="p-8 bg-white rounded-lg border border-gray-200">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
            <span class="text-2xl">üíé</span>
          </div>
